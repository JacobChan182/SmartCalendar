<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:controller="com.smartcalendar.fx.LoginFxController"
            xmlns:fx="http://javafx.com/fxml">
    <center>
        <VBox alignment="CENTER" spacing="12">
            <Label text="SmartCalendar Login" styleClass="title-label"/>

            <TextField fx:id="usernameField"
                       promptText="Username"
                       maxWidth="240"/>

            <PasswordField fx:id="passwordField"
                           promptText="Password"
                           maxWidth="240"/>

            <Label fx:id="errorLabel"
                   styleClass="error-label"/>

            <HBox alignment="CENTER" spacing="10">
                <Button text="Log in" onAction="#onLoginClicked"/>
                <Button text="Sign up" onAction="#onSignupClicked"/>
            </HBox>
        </VBox>
    </center>

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
</BorderPane>
