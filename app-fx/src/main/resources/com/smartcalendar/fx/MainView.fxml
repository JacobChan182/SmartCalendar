<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.smartcalendar.fx.MainController"
            stylesheets="@style.css">

    <top>
        <HBox spacing="8" styleClass="toolbar" alignment="CENTER"
              BorderPane.alignment="CENTER">
            <Button fx:id="btnPrev" text="‹"/>
            <Label fx:id="lblYearMonth" styleClass="title"/>
            <Button fx:id="btnNext" text="›"/>
        </HBox>
    </top>

    <center>
        <GridPane fx:id="monthGrid" hgap="6" vgap="6" styleClass="month-grid">
            <columnConstraints>
                <!-- 7 列，每列 ≈ 100/7% | 7 column, each 100/7 %-->
                <ColumnConstraints percentWidth="14.2857" hgrow="ALWAYS"/>
                <ColumnConstraints percentWidth="14.2857" hgrow="ALWAYS"/>
                <ColumnConstraints percentWidth="14.2857" hgrow="ALWAYS"/>
                <ColumnConstraints percentWidth="14.2857" hgrow="ALWAYS"/>
                <ColumnConstraints percentWidth="14.2857" hgrow="ALWAYS"/>
                <ColumnConstraints percentWidth="14.2857" hgrow="ALWAYS"/>
                <ColumnConstraints percentWidth="14.2857" hgrow="ALWAYS"/>
            </columnConstraints>
            <rowConstraints>
                <!-- 第 0 行是表头，固定一点高度 | row 0 is at the top, fixed height -->
                <RowConstraints prefHeight="36"/>
                <!-- 下面最多 6 行日期，全部可拉伸 | maximum of 6 row of date, stretchable -->
                <RowConstraints vgrow="ALWAYS"/>
                <RowConstraints vgrow="ALWAYS"/>
                <RowConstraints vgrow="ALWAYS"/>
                <RowConstraints vgrow="ALWAYS"/>
                <RowConstraints vgrow="ALWAYS"/>
                <RowConstraints vgrow="ALWAYS"/>
            </rowConstraints>
        </GridPane>
    </center>

    <right>
        <VBox spacing="8" styleClass="sidebar">

            <!-- ========= Day details ========= -->
            <Label fx:id="dayDetailsLabel"
                   id="dayDetailsLabel"
                   text="Day details"/>

            <ListView fx:id="dayEvents"/>

            <!-- Edit / Delete buttons under Day details -->
            <HBox spacing="8">
                <Button text="Edit"
                        onAction="#editEvent"/>
                <Button text="Delete"
                        onAction="#deleteEvent"/>
            </HBox>

            <Separator/>
            <!-- ========= Color Suggestions ========= -->
            <Label fx:id="colorSuggestionsLabel"
                   id="colorSuggestionsLabel"
                   text="Color Suggestions"/>

            <!-- Color picker row: user clicks to pick a base color -->
            <HBox spacing="4" alignment="CENTER_LEFT">
                <ColorPicker fx:id="colorPicker"
                             onAction="#onColorPicked"/>
            </HBox>

            <!-- error label for color suggestion -->
            <Label fx:id="colorErrorLabel"
                   styleClass="error-label"
                   visible="false"/>

            <!-- containers for each color scheme type -->
            <VBox spacing="4" fx:id="colorSchemesContainer">

                <VBox spacing="2">
                    <Label text="Monochromatic" styleClass="scheme-label"/>
                    <HBox spacing="4" fx:id="monochromaticColors" alignment="CENTER_LEFT"/>
                </VBox>

                <VBox spacing="2">
                    <Label text="Analogous" styleClass="scheme-label"/>
                    <HBox spacing="4" fx:id="analogousColors" alignment="CENTER_LEFT"/>
                </VBox>

                <VBox spacing="2">
                    <Label text="Complementary" styleClass="scheme-label"/>
                    <HBox spacing="4" fx:id="complementaryColors" alignment="CENTER_LEFT"/>
                </VBox>

                <VBox spacing="2">
                    <Label text="Neutral" styleClass="scheme-label"/>
                    <HBox spacing="4" fx:id="neutralColors" alignment="CENTER_LEFT"/>
                </VBox>

            </VBox>


            <Separator/>

            <!-- ========= Weather ========= -->
            <Label text="Weather" styleClass="section-title"/>

            <!-- city / country input row -->
            <HBox spacing="4" alignment="CENTER_LEFT">
                <!-- cityField: e.g. "Toronto" -->
                <TextField fx:id="cityField"
                           promptText="City (e.g. Toronto)"
                           prefWidth="120"/>

                <!-- countryField: e.g. "Canada" / "CA" -->
                <TextField fx:id="countryField"
                           promptText="Country / Code (e.g. Canada or CA)"
                           prefWidth="80"/>
            </HBox>

            <!-- button triggers onWeatherSearchClicked() -->
            <Button text="Get weather"
                    onAction="#onWeatherSearchClicked"/>

            <!-- error label, bound to weatherErrorLabel -->
            <Label fx:id="weatherErrorLabel"
                   styleClass="weather-error"/>

            <!-- weather result labels -->
            <Label fx:id="weatherLocationLabel"/>
            <Label fx:id="weatherCurrentLabel"/>
            <Label fx:id="weatherRangeLabel"/>
            <Label fx:id="weatherConditionLabel"/>

        </VBox>
    </right>





</BorderPane>
